{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "post-designer/carousel",
	"version": "0.1.0",
	"title": "Carousel",
	"category": "post-designer",
	"icon": "smiley",
	"description": "Make a carousel by using Posts",
	"supports": {
		"html": false
	},
	"textdomain": "blocky",
	"attributes": {
		"postType": {
			"type": "string",
			"default" : "post"
		},
		"authors": {
			"type": "array",
			"default": []
		},
		"postPerPage": {
			"type": "string",
			"default": 3
		},
		"noPagination": {
			"type": "boolean",
			"default": true
		},
		"orderBy": {
			"type": "string",
			"default": "ID"
		},
		"order": {
			"type": "string",
			"default": "DESC"
		},
		"taxonomies": {
			"type": "array",
			"default": []
		},
		"taxonomy": {
			"type": "string",
			"default": ""
		},
		"terms": {
			"type": "string",
			"default": []
		},
		"selectedTerms": {
			"type": "array",
			"default": []
		},
		"dateFrom": {
			"type": "string",
			"default": ""
		},
		"dateTo": {
			"type": "string",
			"default": ""
		},
		"layout": {
			"type": "string",
			"default": "card"
		},
		"dots": {
			"type": "boolean",
			"default": true
		},
		"infinite": {
			"type": "boolean",
			"default": true
		},
		"autoplay": {
			"type": "boolean",
			"default": true
		},
		"centerMode": {
			"type": "boolean",
			"default": false
		},
		"speed": {
			"type": "boolean",
			"default": 500
		},
		"slidesToScroll": {
			"type": "number",
			"default": 1
		},
		"arrows": {
			"type": "boolean",
			"default": true
		},
		"focusOnSelect": {
			"type": "boolean",
			"default": true
		},
		"initialSlide": {
			"type": "string",
			"default": "0"
		},
		"rtl": {
			"type": "boolean",
			"default": false
		},
		"cardBackgroundColor": {
			"type": "string",
			"default": "#fff"
		},
		"cardBorder": {
			"type": "number",
			"default": 1
		},
		"cardBorderRadius": {
			"type": "number",
			"default": 10
		},
		"showThumbnail": {
			"type": "boolean",
			"default": true
		},
		"showTitle": {
			"type": "boolean",
			"default": true
		},
		"titleColor": {
			"type": "string",
			"default": "#000"
		},
		"titlePadding": {
			"type": "number",
			"default": 0
		},
		"titleFontSize": {
			"type": "string",
			"default": "inherit"
		},
		"showMeta": {
			"type": "boolean",
			"default": true
		},
		"metaKeyColor": {
			"type": "string",
			"default": "#000"
		},
		"metaKeyFontSize": {
			"type": "string",
			"default": "12px"
		},
		"metaValueColor": {
			"type": "string",
			"default": "#000"
		},
		"metaValueFontSize": {
			"type": "string",
			"default": "12px"
		},
		"showCategory": {
			"type": "boolean",
			"default": true
		},
		"categoryLabelColor": {
			"type": "string",
			"default": "#000"
		},
		"categoryLabelFontSize": {
			"type": "string",
			"default": "12px"
		},
		"categoryValueColor": {
			"type": "string",
			"default": "#000"
		},
		"categoryValueFontSize": {
			"type": "string",
			"default": "12px"
		},
		"showExcerpt": {
			"type": "boolean",
			"default": true
		},
		"excerptColor": {
			"type": "string",
			"default": "#000"
		},
		"excerptFontSize": {
			"type": "string",
			"default": "14px"
		},
		"readMoreColor": {
			"type": "string",
			"default": "#000"
		},
		"readMoreFontSize": {
			"type": "string",
			"default": "14px"
		},
		"showAvatar": {
			"type": "boolean",
			"default": true
		},
		"avatarSize": {
			"type": "string",
			"default": "50px"
		},
		"showAuthor": {
			"type": "boolean",
			"default": true
		},
		"authorNameColor": {
			"type": "string",
			"default": "#000"
		},
		"authorNameFontSize": {
			"type": "string",
			"default": "14px"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
