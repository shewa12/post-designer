{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "post-designer/carousel",
	"version": "0.1.0",
	"title": "Carousel",
	"category": "post-designer",
	"icon": "smiley",
	"description": "Make a carousel by using Posts",
	"supports": {
		"html": false
	},
	"textdomain": "blocky",
	"attributes": {
		"postType": {
			"type": "string",
			"default" : "post"
		},
		"authors": {
			"type": "array",
			"default": []
		},
		"postPerPage": {
			"type": "string",
			"default": 3
		},
		"noPagination": {
			"type": "boolean",
			"default": true
		},
		"orderBy": {
			"type": "string",
			"default": "ID"
		},
		"order": {
			"type": "string",
			"default": "DESC"
		},
		"taxonomies": {
			"type": "array",
			"default": []
		},
		"taxonomy": {
			"type": "string",
			"default": ""
		},
		"terms": {
			"type": "string",
			"default": []
		},
		"selectedTerms": {
			"type": "array",
			"default": []
		},
		"dateFrom": {
			"type": "string",
			"default": ""
		},
		"dateTo": {
			"type": "string",
			"default": ""
		},
		"layout": {
			"type": "string",
			"default": "card"
		},
		"dots": {
			"type": "boolean",
			"default": true
		},
		"infinite": {
			"type": "boolean",
			"default": true
		},
		"autoplay": {
			"type": "boolean",
			"default": true
		},
		"centerMode": {
			"type": "boolean",
			"default": false
		},
		"speed": {
			"type": "boolean",
			"default": 500
		},
		"slidesToScroll": {
			"type": "number",
			"default": 1
		},
		"arrows": {
			"type": "boolean",
			"default": true
		},
		"focusOnSelect": {
			"type": "boolean",
			"default": true
		},
		"initialSlide": {
			"type": "string",
			"default": "0"
		},
		"rtl": {
			"type": "boolean",
			"default": false
		},
		"titleColor": {
			"type": "string",
			"default": "#fff"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
